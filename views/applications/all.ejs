<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="stylesheet" href="/assets/bootstrap.css" />
    <title>Admin Login</title>
  </head>
  <body>
    <%- include('../header' , { admin : admin , active : "application_manage" })
    %>
    <div class="container" style="padding-top: 2%;">
      <table class="table table-striped table-dark">
        <thead>
          <tr>
            <th scope="col">S.No.</th>
            <th scope="col">Status</th>
            <th scope="col">Program Id</th>
            <th scope="col">Username</th>
            <th scope="col">Major</th>
            <th scope="col">Apllication Date And Time</th>
            <th scope="col">Operation</th>
          </tr>
        </thead>
        <tbody>
          <% applications.forEach((item,index) => { %>
          <tr>
            <th scope="row"><%= index+1 %></th>
            <th scope="row"><%=item.status %></th>
            <td scope="row"><%=item.program_id%></td>
            <td scope="row"><%=item.name%></td>
            <td scope="row"><%=item.major%></td>
            <td scope="row"><%=item.date%>&nbsp;&nbsp;&nbsp;<%=item.time%></td>
            <td scope="row">
              <a
                href="/applications/view/<%=item.application_id%>"
                class="btn btn-warning"
                >View</a
              >
              <a
                href="/applications/approve/<%=item.application_id%>"
                class="btn btn-success"
                >Approve</a
              >
              <a
                href="/applications/reject/<%=item.application_id%>"
                class="btn btn-danger"
                >Reject</a
              >
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </body>
  <script src="/assets/jquery.js"></script>
  <script src="/assets/bootstrap.js"></script>
  <script src="/assets/popper.js"></script>
</html>
